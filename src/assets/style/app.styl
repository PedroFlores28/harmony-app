    color white
    padding 16px
    display flex
    i
      font-size 24px
      margin-top 4px
      margin-right 8px
    p
      font-size 18px
      font-weight bold
    span
      font-size 12px

    &.blue
      background c-blue
    &.yellow
      background c-yellow
    &.red
      background c-red
    &.green
      background c-green
    &.orange
      background c-orange

@media (min-width: d-break)
