.input
    font-family: 'Open Sans', sans-serif;
    padding: 8px 16px;
    border-radius: 10px;
    border: solid 1px #008000
    width: 509px;
    margin: 10px 0;
    font-size: 16px;
    display: inline-block;
    background: #fff;
    height: 48px;
    margin-bottom: 15px;
    color: #89888D;

  &.error
    border solid 1px red
  &.pass
    padding-right 24px

.input-register
  font-family: 'Open Sans', sans-serif;
  padding: 8px 16px;
  border-radius: 0;
  border: solid 1px rgba(255, 107, 0, 1)
  width: 345px;
  margin: 0px;
  font-size: 13.3333px;
  display: inline-block;
  background: #fff;
  height: 34px;
  margin-top: 12px;


@media (max-width: 1260px) {
  .input-register {
    width 280px
  }
}
@media(max-width: 1024px) {
  .input {
    width 400px
    max-width 400px
  }
}

@media(max-width: 768px) {
  .input {
    width 90%
    max-width 350px
    font-size 15px
    border-radius 0
    padding 8px 10px
    height 42px
    margin-bottom 12px
    display block
  }
}

@media(max-width: 480px) {
  .input {
    width 95%
    max-width 320px
    padding 6px 8px
    height 38px
    border-radius 0
    font-size 14px
    margin-bottom 10px
    display block
  }
}

@media(max-width: 375px) {
  .input {
    width 95%
    max-width 300px
    padding 5px 6px
    height 35px
    border-radius 0
    font-size 13px
    margin-bottom 8px
    display block
  }
}