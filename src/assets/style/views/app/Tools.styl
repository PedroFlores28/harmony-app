._iframe
  border 0
  width 100%
  height 100vh

.tabs
  display flex
  justify-content center
  align-items center
  margin-bottom 24px
  gap 12px
  flex-wrap wrap

  .tab
    display flex
    align-items center
    font-size 1.18rem
    font-weight 600
    color #D209B6
    background #f3e5f5
    border-radius 18px
    padding 10px 28px
    margin 0 6px
    box-shadow 0 2px 8px rgba(255,152,0,0.07)
    transition all 0.18s
    text-decoration none
    cursor pointer
    border none
    position relative

    &:hover
      background #D209B6
      color #fff
      box-shadow 0 4px 16px rgba(255,152,0,0.13)
      transform translateY(-2px) scale(1.04)

    &.active
      background #D209B6
      color #fff
      box-shadow 0 4px 16px rgba(255,152,0,0.13)
      transform translateY(-2px) scale(1.04)

.tab-content
  width 100%
  min-height calc(100vh - 200px)
